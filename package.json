{
  "name": "clink-homepage",
  "version": "0.1.0",
  "description": "Chung-Ang University Blockchain Society C-Link Homepage",
  "author": "C-Link",
  "license": "GPL-3.0-only",
  "deploy": "serverless",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier \"+(src|test)/**/*.+(ts|js|tsx)\" --write",
    "lint": "eslint \"+(src|test)/**/*.+(ts|js|tsx)\"",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "deploy": "serverless"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@sls-next/serverless-component": "1.18.0",
    "antd": "^4.8.6",
    "error-ex": "git+https://github.com/Qix-/node-error-ex.git",
    "next": "^10.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-jest": "^26.6.3",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.0",
    "serverless": "^2.15.0",
    "typescript": "^4.1.2"
  }
}
